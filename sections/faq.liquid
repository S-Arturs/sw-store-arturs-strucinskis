{{ 'component-accordion.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="faq-section isolate page-width">
    <div class="faq-section__wrapper section-{{ section.id }}-padding">
      <div class="faq-section__container">
        {%- if section.settings.heading != blank -%}
          <div class="faq-section__header" style="text-align: {{ section.settings.heading_alignment }};">
            <h2 class="faq-section__heading {{ section.settings.heading_size }}">
              {{ section.settings.heading | escape }}
            </h2>
          </div>
        {%- endif -%}
        
        {%- if section.blocks.size > 0 -%}
          <div class="faq-section__content">
            {%- for block in section.blocks -%}
              <div
                class="faq-item"
                {{ block.shopify_attributes }}
              >
                <details
                  id="FAQ-{{ block.id }}-{{ section.id }}"
                  {% if section.settings.open_first_faq and forloop.first %}
                    open
                  {% endif %}
                >
                  <summary id="Summary-{{ block.id }}-{{ section.id }}">
                    <h3 class="faq-item__question h4">
                      {{ block.settings.question | default: 'Frequently asked question' }}
                    </h3>
                    {% render 'icon-caret' %}
                  </summary>
                  <div
                    class="faq-item__answer rte"
                    id="FAQContent-{{ block.id }}-{{ section.id }}"
                    role="region"
                    aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
                  >
                    {{ block.settings.answer }}
                  </div>
                </details>
              </div>
            {%- endfor -%}
          </div>
        {%- else -%}
          <div class="faq-section__empty">
            <p>{{ 'sections.faq.empty_state' | t }}</p>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

<style>
  .faq-section {
    position: relative;
    z-index: 0;
  }

  .faq-section__container {
    max-width: 73.4rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .faq-section__header {
    margin-bottom: 3rem;
  }

  .faq-section__heading {
    margin: 0;
    word-break: break-word;
  }

  .faq-section__content {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .faq-item {
    border-top: 0.1rem solid rgba(var(--color-foreground), 0.08);
    border-bottom: 0.1rem solid rgba(var(--color-foreground), 0.08);
  }

  .faq-item:first-child {
    border-top: 0.1rem solid rgba(var(--color-foreground), 0.08);
  }

  .faq-item summary {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 0;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .faq-item summary:hover {
    background: rgba(var(--color-foreground), 0.04);
  }

  .faq-item__question {
    margin: 0;
    flex: 1;
    padding-right: 2rem;
    word-break: break-word;
  }

  .faq-item summary .icon-caret {
    height: calc(var(--font-heading-scale) * 0.6rem);
    width: calc(var(--font-heading-scale) * 0.6rem);
    transition: transform 0.2s ease;
  }

  .faq-item details[open] > summary .icon-caret {
    transform: rotate(180deg);
  }

  .faq-item__answer {
    margin: 0 0 1.5rem 0;
    padding: 0 0.6rem;
    word-break: break-word;
    overflow-x: auto;
  }

  .faq-item__answer img {
    max-width: 100%;
  }

  .faq-section__empty {
    text-align: center;
    padding: 3rem 0;
    color: rgba(var(--color-foreground), 0.6);
  }

  @media screen and (min-width: 750px) {
    .faq-section__header {
      margin-bottom: 4rem;
    }
  }
</style>

{% schema %}
{
  "name": "t:sections.faq.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.faq.settings.heading.label",
      "default": "Frequently asked questions"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "t:sections.faq.settings.heading_alignment.label",
      "options": [
        {
          "value": "left",
          "label": "t:sections.faq.settings.heading_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.faq.settings.heading_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.faq.settings.heading_alignment.options__3.label"
        }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "open_first_faq",
      "label": "t:sections.faq.settings.open_first_faq.label",
      "default": false
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "t:sections.faq.blocks.faq_item.name",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "t:sections.faq.blocks.faq_item.settings.question.label",
          "default": "Frequently asked question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "t:sections.faq.blocks.faq_item.settings.answer.label",
          "default": "<p>Use this text to answer questions in as much detail as possible for your customers.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.faq.presets.name",
      "blocks": [
        {
          "type": "faq_item"
        },
        {
          "type": "faq_item"
        },
        {
          "type": "faq_item"
        }
      ]
    }
  ]
}
{% endschema %} 